<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="test/bootstrap.php">
    <testsuites>
        <testsuite name="Tornado Tests">
            <!-- El orden es importante para no re-declarar las clases importadas por Tornado -->
            <file>./test/TornadoTest.php</file>
            <file>./test/AnnotationTest.php</file>
            <file>./test/ConfigTest.php</file>
            <file>./test/ErrorTest.php</file>
            <file>./test/ControllerTest.php</file>
            <file>./test/HookTest.php</file>
            <file>./test/RouteTest.php</file>
            <file>./test/ServiceTest.php</file>
        </testsuite>
    </testsuites>
</phpunit>